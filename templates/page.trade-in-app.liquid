{% comment %}
  Trade-In App Page Template
  Uses the CardForum Trade-In app for submissions
{% endcomment %}

{% layout 'theme' %}

{{ 'trade-in-app.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <form class="trade-in-form" data-trade-in-form data-api-base="/apps/trade-in">
    {% comment %} Header {% endcomment %}
    <div class="trade-in-form__header">
      <h1 class="trade-in-form__title">{{ page.title | default: 'Trade In Your Cards' }}</h1>
      <p class="trade-in-form__subtitle">Get cash or store credit for your trading cards</p>
    </div>

    {% comment %} Main Content Area {% endcomment %}
    <div class="trade-in-form__content">
      {% comment %} Left Column: Search, Browse & Results {% endcomment %}
      <div class="trade-in-form__search-section">
        <div class="trade-in-search" data-card-search>
          <label for="trade-in-search" class="trade-in-search__label">
            Search for cards
          </label>
          <div class="trade-in-search__input-wrapper">
            <svg class="trade-in-search__icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
            </svg>
            <input
              type="text"
              id="trade-in-search"
              class="trade-in-search__input"
              placeholder="Search by card name, set, or number..."
              autocomplete="off"
              data-search-input
            >
            <button type="button" class="trade-in-search__clear" data-search-clear hidden>
              <svg viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>
          <div class="trade-in-search__results" data-search-results hidden></div>
        </div>

        <details class="trade-in-condition-guide">
          <summary class="trade-in-condition-guide__toggle">
            <span>Condition Guide</span>
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </summary>
          <div class="trade-in-condition-guide__content">
            <div class="trade-in-condition-guide__item">
              <strong>NM</strong> - Near Mint - Perfect or near-perfect condition
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>LP</strong> - Lightly Played - Minor wear, slight edge whitening
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>MP</strong> - Moderately Played - Noticeable wear, still sleeved playable
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>HP</strong> - Heavily Played - Significant wear, creases, or damage
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>DMG</strong> - Damaged - Major damage, tears, or stains
            </div>
          </div>
        </details>

        {% comment %} Browse Section {% endcomment %}
        <div class="trade-in-browse" data-browse-section>
          {% comment %} Game Navigation Tabs - Underline Minimal Style {% endcomment %}
          <nav class="trade-in-nav" data-game-nav>
            <div class="trade-in-nav__tabs" data-game-tabs>
              <button type="button" class="trade-in-nav__tab trade-in-nav__tab--active" data-game="onepiece">
                <span class="trade-in-nav__tab-name">One Piece</span>
              </button>
              <button type="button" class="trade-in-nav__tab trade-in-nav__tab--disabled" data-game="pokemon" disabled>
                <span class="trade-in-nav__tab-name">Pokemon</span>
                <span class="trade-in-nav__tab-badge">Coming Soon</span>
              </button>
              <button type="button" class="trade-in-nav__tab trade-in-nav__tab--disabled" data-game="yugioh" disabled>
                <span class="trade-in-nav__tab-name">Yu-Gi-Oh!</span>
                <span class="trade-in-nav__tab-badge">Coming Soon</span>
              </button>
            </div>
          </nav>

          {% comment %} Filter Row {% endcomment %}
          <div class="trade-in-filters" data-filters>
            <div class="trade-in-filters__group">
              <label class="trade-in-filters__label" for="language-filter">Language</label>
              <select class="trade-in-filters__select" id="language-filter" data-language-filter aria-label="Filter by language">
                <option value="">All Languages</option>
              </select>
            </div>
            <div class="trade-in-filters__group">
              <label class="trade-in-filters__label" for="set-filter">Set</label>
              <select class="trade-in-filters__select" id="set-filter" data-set-filter aria-label="Filter by set">
                <option value="">All Sets</option>
              </select>
            </div>
            <button type="button" class="trade-in-filters__refresh" data-refresh-cards title="Refresh cards">
              <svg viewBox="0 0 20 20" fill="currentColor" width="18" height="18">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>

          <div class="trade-in-browse__loading" data-browse-loading>
            <div class="trade-in-spinner"></div>
          </div>
          <div class="trade-in-browse__grid" data-browse-grid></div>
          <div class="trade-in-pagination" data-browse-pagination hidden></div>
        </div>
      </div>

      {% comment %} Right Column: Cart {% endcomment %}
      <div class="trade-in-form__cart-section">
        <div class="trade-in-cart" data-cart>
          <div class="trade-in-cart__header">
            <h3 class="trade-in-cart__title">Your Trade-In</h3>
            <button type="button" class="trade-in-cart__clear" data-cart-clear hidden>
              Clear All
            </button>
          </div>

          <div class="trade-in-cart__empty" data-cart-empty>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
            </svg>
            <p>Search and add cards to get started</p>
            <span>Use the search above to find cards</span>
          </div>

          <div class="trade-in-cart__items" data-cart-items></div>

          <div class="trade-in-cart__summary" data-cart-summary hidden>
            <div class="trade-in-cart__summary-row">
              <span>Items</span>
              <span><span data-item-count>0</span> cards</span>
            </div>
            <div class="trade-in-cart__summary-row trade-in-cart__summary-row--total">
              <span>Subtotal</span>
              <span data-quoted-total>£0.00</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {% comment %} Customer Information (shown after adding items) {% endcomment %}
    <div class="trade-in-form__section" data-customer-section hidden>
      <h3 class="trade-in-form__section-title">Your Information</h3>

      {% if customer %}
        <div class="trade-in-form__customer-info">
          <p>Trading as {{ customer.first_name }}</p>
          <input type="hidden" name="shopifyCustomerId" value="{{ customer.id }}">
          <input type="hidden" name="email" value="{{ customer.email }}">
        </div>
      {% else %}
        <div class="trade-in-form__fields">
          <div class="trade-in-form__field trade-in-form__field--full">
            <label for="customer-email" class="trade-in-form__label">
              Email <span class="required">*</span>
            </label>
            <input
              type="email"
              id="customer-email"
              name="email"
              class="trade-in-form__input"
              required
              data-customer-email
            >
            <span class="trade-in-form__error" data-email-error hidden>
              Email is required
            </span>
          </div>
          <div class="trade-in-form__field">
            <label for="customer-first-name" class="trade-in-form__label">
              First Name
            </label>
            <input
              type="text"
              id="customer-first-name"
              name="firstName"
              class="trade-in-form__input"
            >
          </div>
          <div class="trade-in-form__field">
            <label for="customer-last-name" class="trade-in-form__label">
              Last Name
            </label>
            <input
              type="text"
              id="customer-last-name"
              name="lastName"
              class="trade-in-form__input"
            >
          </div>
        </div>
      {% endif %}

      {% comment %} Bank Details (always visible, required for bank transfer) {% endcomment %}
      <div class="trade-in-bank-details" data-bank-details>
        <h4 class="trade-in-bank-details__title">Bank Details</h4>
        <p class="trade-in-bank-details__subtitle">Required if you choose bank transfer as your payout method</p>
        <div class="trade-in-form__fields">
          <div class="trade-in-form__field trade-in-form__field--full">
            <label for="bank-account-name" class="trade-in-form__label">
              Account Holder Name
            </label>
            <input
              type="text"
              id="bank-account-name"
              name="bankAccountName"
              class="trade-in-form__input"
              placeholder="John Smith"
              data-bank-account-name
            >
          </div>
          <div class="trade-in-form__field">
            <label for="bank-sort-code" class="trade-in-form__label">
              Sort Code
            </label>
            <input
              type="text"
              id="bank-sort-code"
              name="bankSortCode"
              class="trade-in-form__input"
              placeholder="12-34-56"
              maxlength="8"
              data-bank-sort-code
            >
            <span class="trade-in-form__hint">6 digits, e.g. 12-34-56</span>
          </div>
          <div class="trade-in-form__field">
            <label for="bank-account-number" class="trade-in-form__label">
              Account Number
            </label>
            <input
              type="text"
              id="bank-account-number"
              name="bankAccountNumber"
              class="trade-in-form__input"
              placeholder="12345678"
              maxlength="8"
              data-bank-account-number
            >
            <span class="trade-in-form__hint">8 digits</span>
          </div>
        </div>
      </div>
    </div>

    {% comment %} Payout Selection {% endcomment %}
    <div class="trade-in-form__section" data-payout-section hidden>
      <h3 class="trade-in-form__section-title">Choose Your Payout</h3>

      <div class="trade-in-payout-options">
        <label class="trade-in-payout-option trade-in-payout-option--recommended">
          <input type="radio" name="payoutType" value="STORE_CREDIT" checked>
          <span class="trade-in-payout-option__radio"></span>
          <span class="trade-in-payout-option__content">
            <span class="trade-in-payout-option__header">
              <span class="trade-in-payout-option__name">Store Credit</span>
              <span class="trade-in-payout-option__badge">Recommended</span>
            </span>
            <span class="trade-in-payout-option__desc">Use towards any purchase</span>
            <span class="trade-in-payout-option__bonus">+10% bonus</span>
            <span class="trade-in-payout-option__total" data-store-credit-total></span>
          </span>
        </label>

        <label class="trade-in-payout-option">
          <input type="radio" name="payoutType" value="BANK">
          <span class="trade-in-payout-option__radio"></span>
          <span class="trade-in-payout-option__content">
            <span class="trade-in-payout-option__header">
              <span class="trade-in-payout-option__name">Bank Transfer</span>
            </span>
            <span class="trade-in-payout-option__desc">Direct to your bank account</span>
            <span class="trade-in-payout-option__total" data-bank-total></span>
          </span>
        </label>
      </div>
    </div>

    {% comment %} Submit Section {% endcomment %}
    <div class="trade-in-form__section trade-in-form__submit-section" data-submit-section hidden>
      <p class="trade-in-form__minimum" data-minimum-notice hidden>
        Add more to meet the minimum
      </p>

      <button
        type="submit"
        class="trade-in-form__submit-btn"
        data-submit-button
        disabled
      >
        Submit Trade-In
      </button>

      <p class="trade-in-form__terms">
        By submitting, you agree to our
        <a href="/pages/trade-in-terms">Terms & Conditions</a>
      </p>
    </div>

    {% comment %} Loading State {% endcomment %}
    <div class="trade-in-form__loading" data-loading-state hidden>
      <div class="trade-in-spinner"></div>
      <p>Submitting your trade-in...</p>
    </div>

    {% comment %} Success State - Enhanced {% endcomment %}
    <div class="trade-in-form__success" data-success-state hidden>
      <div class="trade-in-success">
        {% comment %} Success Header {% endcomment %}
        <div class="trade-in-success__header">
          <div class="trade-in-success__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="trade-in-success__title">Trade-In Submitted!</h3>
          <p class="trade-in-success__message">We've sent confirmation to <strong data-success-email></strong></p>
        </div>

        {% comment %} Submission Reference Card {% endcomment %}
        <div class="trade-in-success__reference">
          <span class="trade-in-success__reference-label">Your Reference Number</span>
          <div class="trade-in-success__reference-row">
            <span class="trade-in-success__number" data-submission-number></span>
            <button type="button" class="trade-in-success__copy-btn" data-copy-number title="Copy to clipboard">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
              </svg>
              <span class="trade-in-success__copy-text">Copy</span>
            </button>
          </div>
        </div>

        {% comment %} Quick Summary {% endcomment %}
        <div class="trade-in-success__summary">
          <div class="trade-in-success__summary-item">
            <span class="trade-in-success__summary-value" data-success-items>0</span>
            <span class="trade-in-success__summary-label">Cards</span>
          </div>
          <div class="trade-in-success__summary-item">
            <span class="trade-in-success__summary-value" data-success-total>£0.00</span>
            <span class="trade-in-success__summary-label">Quoted Value</span>
          </div>
          <div class="trade-in-success__summary-item">
            <span class="trade-in-success__summary-value" data-success-payout>Store Credit</span>
            <span class="trade-in-success__summary-label">Payout Method</span>
          </div>
        </div>

        {% comment %} Ship To Address - Inline {% endcomment %}
        <div class="trade-in-success__ship-to">
          <div class="trade-in-success__ship-to-header">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
              <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>Ship Your Cards To</span>
          </div>
          <address class="trade-in-success__address" data-ship-to-address>
            Loading address...
          </address>
        </div>

        {% comment %} Action Cards Grid {% endcomment %}
        <div class="trade-in-success__actions-grid">
          <a href="#" class="trade-in-success__action-card trade-in-success__action-card--primary" data-packing-slip-link target="_blank">
            <div class="trade-in-success__action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
                <line x1="16" y1="13" x2="8" y2="13"/>
                <line x1="16" y1="17" x2="8" y2="17"/>
                <polyline points="10 9 9 9 8 9"/>
              </svg>
            </div>
            <div class="trade-in-success__action-content">
              <span class="trade-in-success__action-title">Packing Slip</span>
              <span class="trade-in-success__action-desc">Print & include with your cards</span>
            </div>
            <svg class="trade-in-success__action-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
          </a>

          <a href="#" class="trade-in-success__action-card" data-shipping-link target="_blank">
            <div class="trade-in-success__action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="1" y="3" width="15" height="13"/>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                <circle cx="5.5" cy="18.5" r="2.5"/>
                <circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
            </div>
            <div class="trade-in-success__action-content">
              <span class="trade-in-success__action-title">Shipping Guide</span>
              <span class="trade-in-success__action-desc">Packing tips & checklist</span>
            </div>
            <svg class="trade-in-success__action-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
          </a>

          <a href="#" class="trade-in-success__action-card" data-tracking-link>
            <div class="trade-in-success__action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
              </svg>
            </div>
            <div class="trade-in-success__action-content">
              <span class="trade-in-success__action-title">Track Status</span>
              <span class="trade-in-success__action-desc">Monitor your submission</span>
            </div>
            <svg class="trade-in-success__action-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </a>

          <button type="button" class="trade-in-success__action-card trade-in-success__action-card--secondary" data-new-submission>
            <div class="trade-in-success__action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
              </svg>
            </div>
            <div class="trade-in-success__action-content">
              <span class="trade-in-success__action-title">New Trade-In</span>
              <span class="trade-in-success__action-desc">Submit more cards</span>
            </div>
            <svg class="trade-in-success__action-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>
        </div>

        {% comment %} Email Reminder {% endcomment %}
        <div class="trade-in-success__email-note">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <span>Check your email for confirmation with these details</span>
        </div>
      </div>
    </div>

    {% comment %} Error State {% endcomment %}
    <div class="trade-in-form__error-banner" data-error-banner hidden>
      <svg viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <span data-error-message>Something went wrong. Please try again.</span>
      <button type="button" data-error-dismiss>
        <svg viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </form>
</div>

{% comment %} Condition Selection Modal {% endcomment %}
<div class="trade-in-modal" data-condition-modal hidden>
  <div class="trade-in-modal__backdrop" data-modal-backdrop></div>
  <div class="trade-in-modal__container">
    <div class="trade-in-modal__content">
      <button type="button" class="trade-in-modal__close" data-modal-close>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>

      <div class="trade-in-modal__card-image">
        <img src="" alt="" data-modal-card-image>
      </div>

      <div class="trade-in-modal__card-info">
        <h3 class="trade-in-modal__card-name" data-modal-card-name></h3>
        <p class="trade-in-modal__card-set" data-modal-card-set></p>
      </div>

      <div class="trade-in-modal__conditions">
        <p class="trade-in-modal__label">Select Condition</p>
        <div class="trade-in-conditions" data-condition-options></div>
      </div>

      <div class="trade-in-modal__quantity">
        <label class="trade-in-modal__label">Quantity</label>
        <div class="trade-in-quantity">
          <button type="button" class="trade-in-quantity__btn" data-quantity-decrease>
            <svg viewBox="0 0 20 20" fill="currentColor">

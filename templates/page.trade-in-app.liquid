{% comment %}
  Trade-In App Page Template
  Uses the CardForum Trade-In app for submissions
{% endcomment %}

{% layout 'theme' %}

{{ 'trade-in-app.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <form class="trade-in-form" data-trade-in-form data-api-base="/apps/trade-in">
    {% comment %} Header {% endcomment %}
    <div class="trade-in-form__header">
      <h1 class="trade-in-form__title">{{ page.title | default: 'Trade In Your Cards' }}</h1>
      <p class="trade-in-form__subtitle">Get cash or store credit for your trading cards</p>
    </div>

    {% comment %} Main Content Area {% endcomment %}
    <div class="trade-in-form__content">
      {% comment %} Left Column: Search, Browse & Results {% endcomment %}
      <div class="trade-in-form__search-section">
        <div class="trade-in-search" data-card-search>
          <label for="trade-in-search" class="trade-in-search__label">
            Search for cards
          </label>
          <div class="trade-in-search__input-wrapper">
            <svg class="trade-in-search__icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
            </svg>
            <input
              type="text"
              id="trade-in-search"
              class="trade-in-search__input"
              placeholder="Search by card name, set, or number..."
              autocomplete="off"
              data-search-input
            >
            <button type="button" class="trade-in-search__clear" data-search-clear hidden>
              <svg viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>
          <div class="trade-in-search__results" data-search-results hidden></div>
        </div>

        <details class="trade-in-condition-guide">
          <summary class="trade-in-condition-guide__toggle">
            <span>Condition Guide</span>
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </summary>
          <div class="trade-in-condition-guide__content">
            <div class="trade-in-condition-guide__item">
              <strong>NM</strong> - Near Mint - Perfect or near-perfect condition
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>LP</strong> - Lightly Played - Minor wear, slight edge whitening
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>MP</strong> - Moderately Played - Noticeable wear, still sleeved playable
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>HP</strong> - Heavily Played - Significant wear, creases, or damage
            </div>
            <div class="trade-in-condition-guide__item">
              <strong>DMG</strong> - Damaged - Major damage, tears, or stains
            </div>
          </div>
        </details>

        {% comment %} Browse Section {% endcomment %}
        <div class="trade-in-browse" data-browse-section>
          <div class="trade-in-browse__header">
            <h3 class="trade-in-browse__title">Browse Cards</h3>
            <div class="trade-in-browse__filters">
              <select class="trade-in-browse__select" data-set-filter aria-label="Filter by set">
                <option value="">All Sets</option>
              </select>
            </div>
          </div>
          <div class="trade-in-browse__loading" data-browse-loading>
            <div class="trade-in-spinner"></div>
          </div>
          <div class="trade-in-browse__grid" data-browse-grid></div>
          <div class="trade-in-pagination" data-browse-pagination hidden></div>
        </div>
      </div>

      {% comment %} Right Column: Cart {% endcomment %}
      <div class="trade-in-form__cart-section">
        <div class="trade-in-cart" data-cart>
          <div class="trade-in-cart__header">
            <h3 class="trade-in-cart__title">Your Trade-In</h3>
            <button type="button" class="trade-in-cart__clear" data-cart-clear hidden>
              Clear All
            </button>
          </div>

          <div class="trade-in-cart__empty" data-cart-empty>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
            </svg>
            <p>Search and add cards to get started</p>
            <span>Use the search above to find cards</span>
          </div>

          <div class="trade-in-cart__items" data-cart-items></div>

          <div class="trade-in-cart__summary" data-cart-summary hidden>
            <div class="trade-in-cart__summary-row">
              <span>Items</span>
              <span><span data-item-count>0</span> cards</span>
            </div>
            <div class="trade-in-cart__summary-row trade-in-cart__summary-row--total">
              <span>Subtotal</span>
              <span data-quoted-total>Â£0.00</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {% comment %} Customer Information (shown after adding items) {% endcomment %}
    <div class="trade-in-form__section" data-customer-section hidden>
      <h3 class="trade-in-form__section-title">Your Information</h3>

      {% if customer %}
        <div class="trade-in-form__customer-info">
          <p>Trading as {{ customer.first_name }}</p>
          <input type="hidden" name="shopifyCustomerId" value="{{ customer.id }}">
          <input type="hidden" name="email" value="{{ customer.email }}">
        </div>
      {% else %}
        <div class="trade-in-form__fields">
          <div class="trade-in-form__field trade-in-form__field--full">
            <label for="customer-email" class="trade-in-form__label">
              Email <span class="required">*</span>
            </label>
            <input
              type="email"
              id="customer-email"
              name="email"
              class="trade-in-form__input"
              required
              data-customer-email
            >
            <span class="trade-in-form__error" data-email-error hidden>
              Email is required
            </span>
          </div>
          <div class="trade-in-form__field">
            <label for="customer-first-name" class="trade-in-form__label">
              First Name
            </label>
            <input
              type="text"
              id="customer-first-name"
              name="firstName"
              class="trade-in-form__input"
            >
          </div>
          <div class="trade-in-form__field">
            <label for="customer-last-name" class="trade-in-form__label">
              Last Name
            </label>
            <input
              type="text"
              id="customer-last-name"
              name="lastName"
              class="trade-in-form__input"
            >
          </div>
        </div>
      {% endif %}
    </div>

    {% comment %} Payout Selection {% endcomment %}
    <div class="trade-in-form__section" data-payout-section hidden>
      <h3 class="trade-in-form__section-title">Choose Your Payout</h3>

      <div class="trade-in-payout-options">
        <label class="trade-in-payout-option trade-in-payout-option--recommended">
          <input type="radio" name="payoutType" value="STORE_CREDIT" checked>
          <span class="trade-in-payout-option__radio"></span>
          <span class="trade-in-payout-option__content">
            <span class="trade-in-payout-option__header">
              <span class="trade-in-payout-option__name">Store Credit</span>
              <span class="trade-in-payout-option__badge">Recommended</span>
            </span>
            <span class="trade-in-payout-option__desc">Use towards any purchase</span>
            <span class="trade-in-payout-option__bonus">+10% bonus</span>
            <span class="trade-in-payout-option__total" data-store-credit-total></span>
          </span>
        </label>

        <label class="trade-in-payout-option">
          <input type="radio" name="payoutType" value="BANK">
          <span class="trade-in-payout-option__radio"></span>
          <span class="trade-in-payout-option__content">
            <span class="trade-in-payout-option__header">
              <span class="trade-in-payout-option__name">Bank Transfer</span>
            </span>
            <span class="trade-in-payout-option__desc">Direct to your bank account</span>
            <span class="trade-in-payout-option__total" data-bank-total></span>
          </span>
        </label>
      </div>
    </div>

    {% comment %} Submit Section {% endcomment %}
    <div class="trade-in-form__section trade-in-form__submit-section" data-submit-section hidden>
      <p class="trade-in-form__minimum" data-minimum-notice hidden>
        Add more to meet the minimum
      </p>

      <button
        type="submit"
        class="trade-in-form__submit-btn"
        data-submit-button
        disabled
      >
        Submit Trade-In
      </button>

      <p class="trade-in-form__terms">
        By submitting, you agree to our
        <a href="/pages/trade-in-terms">Terms & Conditions</a>
      </p>
    </div>

    {% comment %} Loading State {% endcomment %}
    <div class="trade-in-form__loading" data-loading-state hidden>
      <div class="trade-in-spinner"></div>
      <p>Submitting your trade-in...</p>
    </div>

    {% comment %} Success State {% endcomment %}
    <div class="trade-in-form__success" data-success-state hidden>
      <div class="trade-in-success">
        <div class="trade-in-success__icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="trade-in-success__title">Trade-In Submitted!</h3>
        <p class="trade-in-success__message">We've received your submission and will email you with next steps.</p>

        <div class="trade-in-success__details">
          <span class="trade-in-success__label">Submission Number</span>
          <span class="trade-in-success__number" data-submission-number></span>
        </div>

        <div class="trade-in-success__next-steps">
          <h4>What's Next?</h4>
          <ol>
            <li>Print your packing slip and include it with your cards</li>
            <li>Pack your cards safely (penny sleeves + toploaders for valuable cards)</li>
            <li>Ship to our address using tracked delivery</li>
          </ol>
        </div>

        <div class="trade-in-success__actions">
          <a href="#" class="trade-in-success__btn trade-in-success__btn--primary" data-packing-slip-link target="_blank">
            Download Packing Slip
          </a>
          <a href="#" class="trade-in-success__btn" data-shipping-link target="_blank">
            Shipping Instructions
          </a>
          <a href="#" class="trade-in-success__btn" data-tracking-link>
            Track Submission
          </a>
          <button type="button" class="trade-in-success__btn trade-in-success__btn--secondary" data-new-submission>
            Start New Trade-In
          </button>
        </div>
      </div>
    </div>

    {% comment %} Error State {% endcomment %}
    <div class="trade-in-form__error-banner" data-error-banner hidden>
      <svg viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <span data-error-message>Something went wrong. Please try again.</span>
      <button type="button" data-error-dismiss>
        <svg viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </form>
</div>

{% comment %} Condition Selection Modal {% endcomment %}
<div class="trade-in-modal" data-condition-modal hidden>
  <div class="trade-in-modal__backdrop" data-modal-backdrop></div>
  <div class="trade-in-modal__container">
    <div class="trade-in-modal__content">
      <button type="button" class="trade-in-modal__close" data-modal-close>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>

      <div class="trade-in-modal__card-image">
        <img src="" alt="" data-modal-card-image>
      </div>

      <div class="trade-in-modal__card-info">
        <h3 class="trade-in-modal__card-name" data-modal-card-name></h3>
        <p class="trade-in-modal__card-set" data-modal-card-set></p>
      </div>

      <div class="trade-in-modal__conditions">
        <p class="trade-in-modal__label">Select Condition</p>
        <div class="trade-in-conditions" data-condition-options></div>
      </div>

      <div class="trade-in-modal__quantity">
        <label class="trade-in-modal__label">Quantity</label>
        <div class="trade-in-quantity">
          <button type="button" class="trade-in-quantity__btn" data-quantity-decrease>
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
            </svg>
          </button>
          <input type="number" value="1" min="1" max="99" class="trade-in-quantity__input" data-quantity-input>
          <button type="button" class="trade-in-quantity__btn" data-quantity-increase>
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>

      <div class="trade-in-modal__price">
        <span class="trade-in-modal__price-label">Price:</span>
        <span class="trade-in-modal__price-value" data-modal-price></span>
      </div>

      <button type="button" class="trade-in-modal__add-btn" data-modal-add>
        Add to Trade-In
      </button>
    </div>
  </div>
</div>

<script src="{{ 'trade-in-app.js' | asset_url }}" defer></script>

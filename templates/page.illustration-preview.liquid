<style>
  .preview-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  .preview-page h1 {
    text-align: center;
    margin-bottom: 10px;
  }
  .preview-page .subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 40px;
  }
  .section-title {
    margin: 50px 0 25px;
    padding-top: 30px;
    border-top: 2px solid #e6e6e6;
    font-size: 24px;
  }
  .section-title:first-of-type {
    border-top: none;
    margin-top: 0;
  }
  .preview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
  }
  .preview-card {
    background: #f6f6f6;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
  }
  .preview-card img,
  .preview-card svg {
    width: 80px;
    height: 80px;
    margin-bottom: 12px;
    object-fit: contain;
  }
  .preview-card.illustration img {
    width: 100%;
    height: 150px;
  }
  .preview-card h4 {
    font-size: 13px;
    margin: 0 0 5px;
    color: #333;
  }
  .preview-card code {
    font-size: 10px;
    color: #888;
    word-break: break-all;
  }
  .tag {
    display: inline-block;
    font-size: 10px;
    padding: 3px 8px;
    border-radius: 12px;
    margin-top: 8px;
  }
  .tag-service { background: #d63a2f; color: white; }
  .tag-tier { background: #ffd700; color: #333; }
  .tag-illustration { background: #4a90d9; color: white; }
</style>

